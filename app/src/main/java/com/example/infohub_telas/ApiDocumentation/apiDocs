          type: object
          properties:
            reply:
              type: string
              example: "üõí Encontrei 3 promo√ß√µes de leite perto de voc√™!"
            confidence:
              type: number
              format: float
              example: 0.95
            response_time_ms:
              type: integer
              example: 150

