          type: string
          description: Pergunta ou mensagem para a IA Groq
          example: "quantos usu√°rios temos cadastrados?"

    GroqResponse:
      type: object
      properties:
        resposta:
          type: string
          description: Resposta interpretada pela IA
          example: "Temos 15 usu√°rios cadastrados no sistema InfoHub."
