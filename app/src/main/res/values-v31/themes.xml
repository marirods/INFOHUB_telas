<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.InfoHub_telas" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Splash screen customization for API 31+ -->
        <item name="android:windowSplashScreenBackground">@color/ic_launcher_background</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="android:windowSplashScreenAnimationDuration">300</item>
        <item name="android:windowSplashScreenBrandingImage">@mipmap/ic_launcher</item>
        <!-- Fallback properties -->
        <item name="android:windowBackground">@color/ic_launcher_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>
</resources>
